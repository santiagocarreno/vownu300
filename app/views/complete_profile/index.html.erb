  <div class="container text-center">



<div class="navbar-fixed-top">

<%= render "/shared/navbar" %> 

</div>


<div class="container">
	<div class="login-container">
            <div id="output"></div>
           <div class="avatar"><img src=<%="#{@user.photo_url}"%> style="width:10%" id:"avatarsito"></div> 
            <div class="form-box">
            	<%= form_for(@user, url: {action: :save}, method: :patch) do |f|%>
